const installationsImage = '/placeholder.svg?height=200&width=300';
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import obc1 from "../components/Img/casa.jpg"
import obc2 from "../components/Img/o2.jpg"
import obc3 from "../components/Img/Opc-4.jpg"
import obc4 from "../components/Img/Opc-5.jpg"
import obc5 from "../components/Img/o1.jpg"
import obc6 from "../components/Img/vidrios.jpg"
